<div id="subscribe-section">
  <div class="container newsletter">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="title-section">
          <h2>Inscrit-toi maintenant !</h2>
          <p>Blablabla</p>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <form id="subscribeform" class="subscribe-form mailchimp" novalidate="true">
          <div class="input-group">
            <!-- Input de l'email -->
            <input id="subscriber-email" class="form-control" name="email" placeholder="Adresse e-mail..." type="email" />
            <!-- Boutton d'inscription -->
            <span class="input-group-btn">
              <button id="subscribe-button" class="btn btn-md standard-button" type="submit">Go!</button>
            </span>
          </div>
          <!-- Fin groupe input -->
        </form>
      </div>
      <!-- Fin group colonne -->
    </div>
  </div>
  <!-- Fin du container -->
</div>
